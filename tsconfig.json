{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "incremental": true,                              
    "target": "ES2020",                                  
    "module": "commonjs",                                
    "outDir": "./dist",                                     
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,               
    "strict": true,                                        
    "skipLibCheck": true,
    "strictNullChecks": false,
    "types": ["vitest/globals"]                                 
  },
  "include": [
    "src/**/*.ts",
  ]
}
